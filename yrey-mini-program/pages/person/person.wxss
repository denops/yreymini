/* pages/person/person.wxss */
.readlog-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f1f1f1;
  height: 320rpx;
  width: 100%;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 36rpx 0 24rpx;
  border-radius: 50%;
}
.dec {
  margin-top: 50rpx;
}
.dec-text {
  font-size: 25rpx;
  color: #757575;
}
.userinfo-nickname {
  color: #333333;
  font-size: 32rpx;
}
.kind-nav-item-t {
  border-top:solid 1px #ececec;
}
.kind-nav-kefu {
  position: relative;
}
.kind-nav-kefu .button-chat {
  top:0;
  left:0;
  margin: 0;
  padding: 0;
  opacity: 0; 
  width:100%;
  height:100%;
  position:absolute;
}